@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - NeoVentas</title>
    <link rel="shortcut icon" href="https://neonet.com.gt/img/web_site/favicon.ico" type="image/x-icon">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --neonet-purple: #6B46C1;
            --neonet-purple-dark: #553399;
            --neonet-yellow: #FFC107;
            --neonet-yellow-dark: #FFA000;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--neonet-purple) 0%, var(--neonet-purple-dark) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            width: 400px;
            max-width: 90%;
        }

        .login-header {
            background: var(--neonet-purple);
            color: white;
            padding: 40px 30px;
            text-align: center;
        }

        .login-header h1 {
            font-size: 32px;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .login-header p {
            opacity: 0.9;
            font-size: 14px;
        }

        .login-body {
            padding: 40px 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--neonet-purple);
            box-shadow: 0 0 0 3px rgba(107, 70, 193, 0.1);
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            background: var(--neonet-yellow);
            color: #000;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-login:hover {
            background: var(--neonet-yellow-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

        .alert {
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-danger {
            background: #fee;
            color: #c33;
            border: 1px solid #fcc;
        }

        .logo-circle {
            width: 80px;
            height: 80px;
            background: var(--neonet-yellow);
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            font-weight: 900;
            color: var(--neonet-purple);
        }
    </style>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onSubmit(token) {
            document.getElementById("login-form").submit();
        }
    </script>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <div class="logo-circle">N</div>
            <h1>NeoVentas</h1>
            <p>Sistema Ventas Neonet</p>
        </div>
        <div class="login-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
            <form id="login-form" method="post" asp-action="Login">
                <div class="form-group">
                    <label for="Email">Correo Electrónico</label>
                    <input type="email" id="Email" name="Email" required placeholder="usuario@neonet.com" />
                </div>
                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" id="Password" name="Password" required placeholder="••••••••" />
                </div>
                
                <button type="submit" 
                        class="btn-login g-recaptcha" 
                        data-sitekey="6LejkkYsAAAAAOTVntoUNx-KvtqlV0IKPu_amro-" 
                        data-callback='onSubmit' 
                        data-action='submit'>
                    Iniciar Sesión
                </button>
            </form>
        </div>
    </div>
</body>
</html>
